# rails
alias be='bundle exec'                                                          
alias br='bin/rails'                                                          
alias brk='bin/rake'                                                          
alias dbreset='bin/rake -t db:drop db:create'
## MacOS Monterey throws errors when running minitests in parallel
alias brkt='OBJC_DISABLE_INITIALIZE_FORK_SAFETY=YES brk test'

# js
