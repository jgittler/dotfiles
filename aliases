# utility
alias ls='ls -GF'
alias lh='ls -a'
alias la='ls -lhrSa'
alias vz='v ~/dotfiles/zshrc'                                                         
alias vv='v ~/dotfiles/nvim/init.vim'
alias vg='v ~/dotfiles/gitconfig'
alias vt='v ~/dotfiles/tmux.conf'
alias vp='v ~/dotfiles/psqlrc'
alias vf='v ~/dotfiles/bash_functions'
alias vs='v ~/.ssh/config'
alias v='nvim'
alias reload='source ~/.zshrc'

# rails
alias be='bundle exec'                                                          
alias br='bin/rails'                                                          
alias brs='bin/rspec'                                                          
alias brk='bin/rake'                                                          
alias dbreset='bin/rake -t db:drop db:create'

# elixir
alias miex='iex -S mix'
alias phxs='mix phx.server'

# js
alias jsc='/System/Library/Frameworks/JavaScriptCore.framework/Versions/Current/Resources/jsc'

# tmux
alias tma='tmux att -t'
alias tmk='tmux kill-session -t'
alias tmn='tmux new -s'
alias muxi='tmuxinator'

# services
alias startredis='redis-server /usr/local/etc/redis.conf'
alias startmem='/usr/local/opt/memcached/bin/memcached'

# ctags
alias tagme='ctags -R ./tags .'
